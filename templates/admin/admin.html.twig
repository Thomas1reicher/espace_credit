{# templates/admin/login.html.twig #}
{% extends 'admin/base-admin.html.twig' %}

{% block titre %}Page admin{% endblock%}

{% block stylesheets %}
    {{ parent() }}

{% endblock%}

{% block contenuadmin %}




<div class="peers ai-s fxw-nw h-100vh">
    <div class="d-n@sm- peer peer-greed h-100 pos-r bgr-n bgpX-c bgpY-c bgsz-cv"
         style='background: black no-repeat url(/assets/admin/images/A3COM_logo.svg) center / contain ;'>
    </div>
    <div class="col-12 col-md-4 peer pX-40 pY-80 h-100 bgc-white scrollable pos-r" style='min-width: 320px;'>
        <h4 class="fw-300 c-grey-900 mB-40">Authentification</h4>
        <div class="row">
            <form action="{{ path('loginAdmin') }}" method="post">
            <div class="col-lg-12 col-lg-offset-12">
                    <div class="form-group">
                        <label for="username">email</label>
                        <input type="email" id="username" name="username" value="{{ last_username }}" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label for="password">password</label>
                        <input type="password" id="password" name="password" class="form-control" />
                    </div>
                    <div class="form-group">
                        <div class="peers ai-c jc-sb fxw-nw">
                            <div class="peer">
                                <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}"/>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                                <button name="action" type="submit" class="btn btn-primary">
                                    <i class="fa fa-sign-in" aria-hidden="true"></i> Connection
                                </button>
                            </div>
                        </div>
                    </div>
            </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}